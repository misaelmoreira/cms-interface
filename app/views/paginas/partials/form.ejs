<% 
if(this.pagina === undefined){
    this.pagina = {
        nome: "",
        conteudo: ""
    }
}
%>

<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

<script>
    tinymce.init({
      selector: '#mytextarea'
    });
</script>
<div class="campos-form">
    <div><label for="nome">Nome:</label> <input type="text" value="<%= pagina.nome %>" name="nome" id="nome"></div>    
    <div>
        <label for="conteudo">Conteudo:</label>
        <textarea id="mytextarea" style="width: 500px; height: 200px;" name="conteudo" id="conteudo"> <%= pagina.conteudo %> </textarea>
    </div>
</div>