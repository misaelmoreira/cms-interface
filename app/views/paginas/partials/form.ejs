<% 
if(this.pagina === undefined){
    this.pagina = {
        nome: "",
        conteudo: ""
    }
}
%>

<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

<script>
    tinymce.init({
      selector: '#mytextarea'
    });
</script>

Nome: <input type="text" value="<%= pagina.nome %>" name="nome"><br><br>
Conteudo: <br>
<textarea id="mytextarea" style="width: 500px; height: 200px;" name="conteudo"> <%= pagina.conteudo %> </textarea> <br>